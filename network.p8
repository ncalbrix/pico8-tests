-- network class

function new_network(_nodes,_links)
	_nodes = (_nodes or {})
	_links = (_links or {})
	
	return {
		--attrs
		nodes=_nodes,
		links=_links,
		
		--outer methods
		draw=function(self)
			for n in all(self.nodes) do
				n:draw()
			end
		end
	}
end
