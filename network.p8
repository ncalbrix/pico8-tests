-- node class

def_node_col=13

function new_node(_x,_y,_col)
	_col = (_col or def_node_col)
	
	return {
	 --attrs
		x=_x,
		y=_y,
		col=_col,
		
		--outer methods
		draw=function(self)
			rect(
				self.x-1,
				self.y-1,
				self.x+1,
				self.y+1,
				self.col
			)
		end
	}
end
